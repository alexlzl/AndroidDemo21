<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--边线颜色-->
    <item>

        <shape>
            <solid android:color="@color/ac_EBECED" />
            <corners
                android:bottomLeftRadius="4dp"
                android:topLeftRadius="4dp" />
        </shape>
    </item>
    <!--主题背景颜色-->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="@android:color/white" />
            <corners
                android:bottomLeftRadius="4dp"
                android:topLeftRadius="4dp" />
        </shape>
    </item>

</layer-list>